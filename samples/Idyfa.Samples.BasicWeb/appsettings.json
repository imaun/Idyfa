{
  "Idyfa": {
    "IdyfaDbConfig": {
      "DbTypeName": "SqlServer",
      "Databases": [
        {
          "Name": "sqlite",
          "ConnectionString": "Data Source=Idyfa.db;",
          "Timeout": 3
        },
        {
          "Name": "sqlserver",
          "ConnectionString": "Data Source=.;Database=IdyfaDb;Integrated Security=True",
          "Timeout": 3
        }
      ]
    },
    "UserOptions" : {
      "AllowedUserNameCharacters" : "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789-._@+",
      "RequireUniqueEmail" : true,
      "UserNameType" : 0,
      "BannedEmails": [ ],
      "BannedUserNames": [ ]
    },
    "PasswordOptions" : {
      "RequiredLength" : 6,
      "RequiredUniqueChars" : 1,
      "RequireNonAlphanumeric": false,
      "RequireLowercase": false,
      "RequireUppercase": false,
      "RequireDigit": false,
      "CanIncludeUserName": true,
      "MaxLength": 100,
      "InvalidCharacters": null,
      "PreviouslyUsedPasswordsNotAllowed": true,
      "ChangePasswordReminderDays": 50,
      "BannedPasswords": [ ]
    },
    "Registration": {
      "PasswordIsRequired": false,
      "UserNameIsRequired": true,
      "UserNameMinLength": 4,
      "EmailIsRequired": true,
      "PhoneNumberIsRequired": true,
      "FirstNameIsRequired": false,
      "LastNameIsRequired": false,
      "NationalCodeIsRequired": false
    },
    "TableNamePrefix": "Sample",
    "Authentication": {
      "CookieName": "Sample",
      "LoginPath": "/account/login",
      "LogoutPath": "/account/logout",
      "AccessDeniedPath": "/account/denied",
      "ExpireTimeSpan": "20.00:00:00.0000",
      "SlidingExpiration": true,
      "LockoutOnFailure": true
    }
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
